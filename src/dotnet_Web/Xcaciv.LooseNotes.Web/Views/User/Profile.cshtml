@model Xcaciv.LooseNotes.Web.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<h1>User Profile</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Profile" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ResetToken" />
            <input type="hidden" asp-for="Role" />
            
            <div class="form-group mb-3">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <small class="text-muted">Enter a new password only if you want to change it</small>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>

        <div class="mt-4">
            <h4>Account Information</h4>
            <dl class="row">
                <dt class="col-sm-3">User ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Role:</dt>
                <dd class="col-sm-9">@Model.Role</dd>
                
                <dt class="col-sm-3">Last Login:</dt>
                <dd class="col-sm-9">@(Model.LastLogin.HasValue ? Model.LastLogin.Value.ToString("g") : "Never")</dd>
            </dl>
        </div>
    </div>
</div>
