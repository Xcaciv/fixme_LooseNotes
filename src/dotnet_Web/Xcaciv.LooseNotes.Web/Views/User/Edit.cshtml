@model Xcaciv.LooseNotes.Web.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <small class="form-text text-muted">Warning: Password is stored in plain text (intentionally insecure)</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label">Role</label>
                <select asp-for="Role" class="form-control">
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ResetToken" class="control-label">Reset Token</label>
                <input asp-for="ResetToken" class="form-control" />
                <small class="form-text text-muted">Leave empty for no token</small>
            </div>
            
            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="AdminDashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
